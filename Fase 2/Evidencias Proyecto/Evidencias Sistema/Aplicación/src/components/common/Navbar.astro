---
import { getSessionSafe } from '@/lib/supabase/supabaseServer'; 
import type { UserRole, Profile } from '@/types/Profile';
import type { User } from '@supabase/supabase-js';


// Obtención de Sesión y Perfil (SSR)
const { user, supabase } = await getSessionSafe({ request: Astro.request, cookies: Astro.cookies });

let profile: Profile | null = null;
let userAuth: User | null = user; // El objeto User de Supabase Auth

// Consulta de Perfil
if (userAuth) {
    // Solo hacemos la consulta si tenemos el ID de Auth.
    const { data: profileData, error: profileError } = await supabase 
        .from("user_profiles")
        .select("names,email, role") // Solo traemos los campos necesarios
        .eq("user_id", userAuth.id)
        .maybeSingle(); 

    if (profileError) {
        console.warn("[Navbar] Perfil de usuario no encontrado:", profileError.message);
        }profile = profileData as Profile | null;}

// Valores para la UI
const displayEmail: string = profile?.email ?? userAuth?.email ?? "";
const displayName: string = profile?.names ?? (displayEmail ? displayEmail.split("@")[0] : "Usuario");
const userRole: UserRole | null = profile?.role ?? null;
---

<nav class="fixed top-0 z-50 w-full" style="background-color: #000000;">
<div class="px-3 py-3 lg:px-5 lg:pl-3">
    <div class="flex items-center justify-between">
        <div class="flex items-center">

            <button data-drawer-target="logo-sidebar" data-drawer-toggle="logo-sidebar" aria-controls="logo-sidebar" type="button"
                class="inline-flex items-center p-2 text-sm text-gray-300 rounded-lg sm:hidden hover:bg-gray-800 focus:outline-none focus:ring-2 focus:ring-gray-600">
                <span class="sr-only">Abrir menú</span>
                <svg class="w-6 h-6" aria-hidden="true" fill="currentColor" viewBox="0 0 20 20"><path clip-rule="evenodd" fill-rule="evenodd" d="M2 4.75A.75.75 0 012.75 4h14.5a.75.75 0 010 1.5H2.75A.75.75 0 012 4.75zm0 10.5a.75.75 0 01.75-.75h7.5a.75.75 0 010 1.5h-7.5a.75.75 0 01-.75-.75zM2 10a.75.75 0 01.75-.75h14.5a.75.75 0 010 1.5H2.75A.75.75 0 012 10z"></path></svg>
            </button>

            <a href="/dashboard" class="flex ms-2 md:me-24">
                <img src="https://i.imgnest.com/uLmdo.png" class="h-10" alt="DuocUc Logo" />
            </a>
        </div>

        <div class="flex items-center">
            <div class="flex items-center ms-3"><div>
                <button type="button" class="flex text-sm bg-gray-800 rounded-full focus:ring-4 focus:ring-gray-600" aria-expanded="false" data-dropdown-toggle="dropdown-user">
                    <span class="sr-only">Menú de Usuario</span>
                    <img class="w-8 h-8 rounded-full" src="https://lh3.googleusercontent.com/a/ACg8ocKbdE5vB4igq_T0C2wDj0TZkHq-5vmKoB9IU4Tv-xb8SG-ZIw=s318-c-mo-no" alt="user photo">
                </button>
            </div>

            <div id="dropdown-user" class="z-50 hidden my-4 text-base list-none bg-white divide-y divide-gray-100 rounded-sm shadow-sm dark:bg-gray-700 dark:divide-gray-600">
                <div class="px-4 py-3" role="none">
                    <p class="text-sm text-gray-900 dark:text-white" role="none">{displayName} {userRole && `(${userRole})`}</p>
                    {displayEmail && <p class="text-sm font-medium text-gray-900 truncate dark:text-gray-300" role="none">{displayEmail}</p>}
                </div>
                <ul class="py-1" role="none">
                    {/* Solo mostramos opciones si el usuario existe */} { userAuth && (
                        <>
                            <li><a href={`/edit-user/${userAuth.id}`} class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 dark:text-gray-300 dark:hover:bg-gray-600 dark:hover:text-white">Editar Perfil</a></li>
                            <li><a href="/auth/logout" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 dark:text-gray-300 dark:hover:bg-gray-600 dark:hover:text-white">Salir</a></li>
                        </>
                    )}
                </ul>
            </div>
        </div>
        </div>
    </div>
    </div>
</nav>
