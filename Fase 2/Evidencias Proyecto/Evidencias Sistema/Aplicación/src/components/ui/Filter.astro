---
type Props = {
    title?: string;
    subtitle?: string;
    actionId?: string;
};

// Desestructuramos y establecemos valores por defecto
const {
    title = "Filtro",
    subtitle = "Seleccionar opci√≥n",
    actionId = ""} = Astro.props as Props;
---

<div 
    class="flex items-center justify-between h-24 rounded-xl bg-white dark:bg-gray-700 w-full p-4 shadow-md hover:shadow-lg transition-shadow cursor-pointer"
    {actionId ? `data-modal-target=${actionId}` : ''}
    {actionId ? `data-modal-toggle=${actionId}` : ''}>
    <div class="text-left">
        <h5 class="mb-1 text-sm font-semibold text-gray-500 dark:text-gray-400">
            {title}
        </h5>
        <p class="text-xl font-bold tracking-tight text-gray-900 dark:text-white truncate">
            {subtitle}
        </p>
    </div>

    <svg 
        class="w-6 h-6 text-gray-400 dark:text-gray-300" 
        fill="none" 
        stroke="currentColor" 
        viewBox="0 0 24 24" 
        xmlns="http://www.w3.org/2000/svg"
    >
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
    </svg>
</div>