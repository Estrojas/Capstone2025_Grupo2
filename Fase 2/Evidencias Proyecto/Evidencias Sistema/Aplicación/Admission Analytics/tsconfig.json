{
  "extends": "astro/tsconfigs/strict", // Configuracion estricta como base
  "include": [
    ".astro/types.d.ts", // Incluye tipos generados por Astro
    "**/*" // Incluye todos los archivos del proyecto
  ],
  "exclude": [
    "dist", // Excluimos la carpeta de compilacion
    "node_modules" // Nos aseguramos de que se exlcluyan los node modules
  ],
  "compilerOptions": {
    "baseUrl": ".",
    // Configuracion de alias para que Ts los reconozca
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    // Opciones de React
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    // Permite importar cosas que Node.js tradicionalmente no manejaria, con esto tenemos mas compatibilidad
    "moduleResolution": "bundler",
    // Nos aseguramos que los tipos del cliente Astro esten disponibles
    "types": ["astro/client"] // Tambien se puede a√±adir "react/jsx-runtime" 
  }
}