---
import Layout from "@/layouts/Layout.astro";
---

<style>
  @import "@/styles/logout.css";
</style>
<Layout title="Pagina no encontrada">
    <div class="logout-container">
        <div class="logout-card">

            {/* Título de Error 404 */}
            <h1 class="text-8xl font-bold text-white mb-4">4<span class="text-blue-600">0</span>4</h1>

            <p class="text-gray-300 mb-8">La página que buscas no existe.</p>

            {/* URL de Redirección (Opcional para debug) */}
            <p class="text-white">
                Haz click aqui para regresar a la <a href="/" class="text-blue-500 underline">página de inicio</a>.
            </p>
        </div>
    </div>
</Layout>
